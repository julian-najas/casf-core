{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CASF Decision v1",
  "type": "object",
  "required": ["decision", "violations", "allowed_outputs"],
  "properties": {
    "decision": { "type": "string", "enum": ["ALLOW", "DENY", "NEEDS_APPROVAL"] },
    "violations": { "type": "array", "items": { "type": "string" } },
    "allowed_outputs": { "type": "array", "items": { "type": "string" } },
    "reason": { "type": "string" }
  }
}
