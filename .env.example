# ── Database ──────────────────────────────────────────────
PG_DSN=dbname=casf user=casf password=casf host=localhost port=5432

# ── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── OPA ───────────────────────────────────────────────────
OPA_URL=http://localhost:8181

# ── Anti-replay ──────────────────────────────────────────
ANTI_REPLAY_ENABLED=true
ANTI_REPLAY_TTL_SECONDS=86400

# ── SMS rate-limit ───────────────────────────────────────
SMS_RATE_LIMIT=1
SMS_RATE_WINDOW_S=3600
# Per-tenant overrides (JSON): {"t-enterprise": {"limit": 10, "window_s": 3600}}
SMS_RATE_TENANT_OVERRIDES={}

# ── Audit (testing only) ─────────────────────────────────
# CASF_DISABLE_AUDIT=1

# ── Logging ──────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json
